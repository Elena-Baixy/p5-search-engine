"Database management script, copied from project2"


#!/bin/bash
# insta485db


# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail


# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset)"
}


if [ $# -ne 1 ]; then
  usage
  exit 1
fi


# Parse argument.  $1 is the first argument
case $1 in
  "create")
# TODO: Check this part,  create when database exists return 1
    if [ -f var/search.sqlite3 ]; then
        echo "Error: database already exists"
        exit 1
    fi

    echo "+ mkdir -p var/
	+ sqlite3 var/search.sqlite3 < search_server/search/sql/search.sql"

	mkdir -p var/
    sqlite3 var/search.sqlite3 < search_server/search/sql/search.sql
    ;;


  "destroy")
    echo "+ rm -f var/search.sqlite3"

	rm -f var/search.sqlite3
    ;;


  "reset")
    echo "+ rm -f var/search.sqlite3
    + mkdir -p var/
    + sqlite3 var/search.sqlite3 < search_server/search/sql/search.sql" 

	rm -f var/search.sqlite3
    mkdir -p var/
    sqlite3 var/search.sqlite3 < search_server/search/sql/search.sql
    ;;

  *)
    usage
    exit 1
    ;;
esac
